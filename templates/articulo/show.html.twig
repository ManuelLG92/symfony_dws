{% extends 'base.html.twig' %}

{% block title %}Articulo{% endblock %}

{% block body %}
    {% set imgHeight = "90%" %}
    {% set imgWidth = "90%" %}

    <div class="container mx-auto">
        <hr>
    <div class="row">
        <div class="col-md-4 text-center p-2">
            {% if articulo.foto is null %}
                <img src="{{ asset('imagenes_articulos/jquery.png') }}" class="" alt="..." >
            {% else %}
                <img src="{{ asset('imagenes_articulos/') ~ articulo.foto }}" class="" alt="..." width="{{ imgWidth }}" height="{{ imgHeight }}" >
            {% endif %}
        </div>
        <div class="col-md-6">
            <h1>Articulo: </h1><span>{{ articulo.nombre }}</span>
            <hr>
            <h3>Descripcion:  </h3><span>{{ articulo.descripcion }}</span>
            <hr>

            {% if articulo.stock > 0 %}
                {% set inputId = 'btn' ~  app.user.id  ~  articulo.getIdSeccion() ~  articulo.id  %}
                <p class="text-success">Disponible</p>
                <div class="d-flex justify-content-between">
                    <h5>Precio: {{ articulo.precio }}</h5>
                    <h5 class="text-success">Stock: {{ articulo.stock }}</h5>

                </div>

                <div class="text-center mt-3">
                    <input type="button" value="AÃ±adir a la cesta"
                           class="btn btn-primary w-50" id="{{ inputId }}"
                           onclick="agregarAlCarro({{ app.user.id }},{{ articulo.id }},{{ inputId }} )">
                </div>
                {% else %}
                    <p class="text-danger">No hay unidades disponibles</p>
                    <div class="text-center">
                        <input type="button" value="No disponible"
                               class="btn btn-secondary w-50" disabled>
                    </div>

            {% endif %}


        </div>
    </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ articulo.id }}</td>
            </tr>
            <tr>
                <th>Id_vendedor</th>
                <td>{{ articulo.idVendedor }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ articulo.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ articulo.descripcion }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ articulo.stock }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ articulo.precio }}</td>
            </tr>
        </tbody>
    </table>
    <p>{{ articulo.foto }}</p>

    <a href="{{ path('index') }}">back to list</a>

    <a href="{{ path('articulo_edit', {'id': articulo.id}) }}">edit</a>

    {{ include('articulo/_delete_form.html.twig') }}
    <script src="{{ asset('js/carroCompra.js') }}" type="text/javascript">
    </script>
{% endblock %}
